author = {Takemata, Naomichi and Oda, Arisa and Yamada, Takatomi and Galipon, Josephine and Miyoshi, Tomoichiro and Suzuki, Yutaka and Sugano, Sumio and Hoffman, Charles S and Hirota, Kouji and Ohta, Kunihiro},
