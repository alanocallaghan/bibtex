keywords = {Collapsed Gibbs sampler,Mixture models,Reversible jump Markov chain Monte Carlo sampling,Ribonucleic acid sequencing},
pages = {n/a----n/a},
title = {{A Bayesian model selection approach for identifying differentially expressed transcripts from RNA sequencing data}},
url = {http://dx.doi.org/10.1111/rssc.12213},
year = {2017}
}
