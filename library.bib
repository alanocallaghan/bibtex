journal = {PLoS Comput Biol},
month = {nov},
number = {11},
pages = {e1005189},
pmid = {27814363},
title = {{Using Matrix and Tensor Factorizations for the Single-Trial Analysis of Population Spike Trains}},
volume = {12},
year = {2016}
}
